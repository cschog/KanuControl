{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022", 
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "skipLibCheck": true, // Optional: Skips type checks for libraries
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true, // Ensures compatibility with CommonJS modules
    "esModuleInterop": true, // Ensures compatibility with ES modules
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}